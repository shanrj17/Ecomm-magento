<routes xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Webapi:etc/webapi.xsd">
    <route url="/V1/guest-carts/:cartId/cdz-shipping-information" method="POST">
        <service class="Codazon\SalesPro\Api\GuestShippingInformationManagementInterface" method="saveAddressInformation"/>
        <resources>
            <resource ref="anonymous" />
        </resources>
    </route>
    <route url="/V1/carts/mine/cdz-shipping-information" method="POST">
        <service class="Codazon\SalesPro\Api\ShippingInformationManagementInterface" method="saveAddressInformation"/>
        <resources>
            <resource ref="self" />
        </resources>
        <data>
            <parameter name="cartId" force="true">%cart_id%</parameter>
        </data>
    </route>
</routes>