<patch_list>
    <item>
        <collection>Codazon\ThemeLayoutPro\Model\ResourceModel\Header\Collection</collection>
        <model>Codazon\ThemeLayoutPro\Model\Header</model>
        <field_to_select>layout_xml</field_to_select>
        <attribute_to_select></attribute_to_select>
        <process>
            <item>
                <condition>
                    <field>identifier</field>
                    <value>header-style-01</value>
                </condition>
                <patch>
                    <item>
                        <field>layout_xml</field>
                        <search>header-search-wrap</search>
                        <not_exist>
                            <search>htmlClass="col-sm-8 col-md-6 col-lg-9 header-panel-middle"</search>
                            <replace>htmlClass="col-sm-8 col-md-6 col-lg-9 header-panel-middle header-search-wrap"</replace>
                        </not_exist>
                    </item>
                </patch>
            </item>
            <item>
                <patch>
                    <item>
                        <field>layout_xml</field>
                        <search>header-search-container</search>
                        <exist>
                            <search>header-search-container</search>
                            <replace>header-search-wrap</replace>
                        </exist>
                    </item>
                </patch>
            </item>
            <item>
                <condition>
                    <field>identifier</field>
                    <value>header-style-06</value>
                </condition>
                <patch>
                    <item>
                        <field>layout_xml</field>
                        <search>header-search-wrap</search>
                        <not_exist>
                            <search>htmlClass="hp-right-bottom"</search>
                            <replace>htmlClass="hp-right-bottom header-search-wrap"</replace>
                        </not_exist>
                    </item>
                </patch>
            </item>
            <item>
                <condition>
                    <field>identifier</field>
                    <value>header-style-11</value>
                </condition>
                <patch>
                    <item>
                        <field>layout_xml</field>
                        <search>header-search-wrap</search>
                        <not_exist>
                            <search>htmlClass="col-sm-14 col-md-9 col-lg-10 header-panel-center"</search>
                            <replace>htmlClass="col-sm-14 col-md-9 col-lg-10 header-panel-center header-search-wrap"</replace>
                        </not_exist>
                    </item>
                </patch>
            </item>
            <item>
                <condition>
                    <field>identifier</field>
                    <value>header-style-12</value>
                </condition>
                <patch>
                    <item>
                        <field>layout_xml</field>
                        <search>header-search-wrap</search>
                        <not_exist>
                            <search>htmlClass="col-sm-6 header-panel-left"</search>
                            <replace>htmlClass="col-sm-6 header-panel-left header-search-wrap"</replace>
                        </not_exist>
                    </item>
                </patch>
            </item>
        </process>
    </item>
